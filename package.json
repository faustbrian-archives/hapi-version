{
	"name": "@kodekeep/hapi-version",
	"version": "1.0.0",
	"description": "API versioning for hapi.js",
	"repository": "https://github.com/kodekeep/hapi-version",
	"license": "MPL-2.0",
	"author": "KodeKeep <hello@kodekeep.com>",
	"files": [
		"dist"
	],
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc -w",
		"format": "yarn lint && yarn prettier",
		"lint": "./node_modules/eslint/bin/eslint.js src --ext .ts --fix",
		"prepublishOnly": "yarn test && yarn build",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "jest"
	},
	"jest": {
		"bail": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!**/node_modules/**"
		],
		"coverageDirectory": "<rootDir>/.coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"setupFilesAfterEnv": [
			"jest-extended"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"verbose": true
	},
	"dependencies": {
		"@hapi/boom": "^9.1.0",
		"@hapi/hapi": "^20.0.0",
		"@hapi/joi": "^17.1.1",
		"lodash.get": "^4.4.2",
		"lodash.set": "^4.3.2",
		"media-type": "^0.3.1",
		"micromatch": "^4.0.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "0.7.0",
		"@types/hapi__boom": "9.0.1",
		"@types/hapi__hapi": "20.0.0",
		"@types/hapi__joi": "17.1.4",
		"@types/jest": "26.0.14",
		"@types/lodash": "4.14.161",
		"@types/lodash.get": "4.4.6",
		"@types/lodash.set": "4.3.6",
		"@types/micromatch": "4.0.1",
		"@types/prettier": "2.1.1",
		"@typescript-eslint/eslint-plugin": "4.1.1",
		"@typescript-eslint/parser": "4.1.1",
		"eslint": "7.9.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-plugin-jest": "24.0.1",
		"eslint-plugin-prettier": "3.1.4",
		"eslint-plugin-simple-import-sort": "5.0.3",
		"jest": "26.4.2",
		"jest-extended": "0.11.5",
		"prettier": "2.1.2",
		"ts-jest": "26.3.0",
		"typescript": "4.0.3"
	}
}
